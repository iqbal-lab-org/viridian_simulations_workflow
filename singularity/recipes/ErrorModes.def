Bootstrap: library
From: ubuntu:20.04

%setup
    mkdir ${SINGULARITY_ROOTFS}/viridian_simulations
    mkdir ${SINGULARITY_ROOTFS}/viridian_simulations/scripts
    mkdir ${SINGULARITY_ROOTFS}/viridian_simulations/V3
    mkdir ${SINGULARITY_ROOTFS}/viridian_simulations/V4
    mkdir ${SINGULARITY_ROOTFS}/viridian_simulations/V4.1

%post
    export DEBIAN_FRONTEND=noninteractive

    cd ${SINGULARITY_ROOTFS}/viridian_simulations
    # apt-get install python and git
    apt-get update
    apt install -y software-properties-common
    add-apt-repository universe
    apt-get install -y \
        make \
        gcc-10 \
        g++-10 \
        git \
        python-is-python3 \
        python3-pip \
        python3-setuptools \
        python3-dev \
        libclang-dev \
        libbz2-dev \
        liblzma-dev \
        wget \
        libcurl4-openssl-dev \
        libncurses5-dev
    # install Bedtools2
    wget https://github.com/arq5x/bedtools2/releases/download/v2.30.0/bedtools-2.30.0.tar.gz
    tar -zxvf bedtools-2.30.0.tar.gz
    cd bedtools2
    make
    cd ..
    # install htslib
    wget https://github.com/samtools/htslib/releases/download/1.14/htslib-1.14.tar.bz2
    tar -vxjf htslib-1.14.tar.bz2
    cd htslib-1.14
    make
    cd ..
    # install samtools
    wget https://github.com/samtools/samtools/releases/download/1.14/samtools-1.14.tar.bz2
    tar -vxjf samtools-1.14.tar.bz2
    mv samtools-1.14 samtools && cd samtools
    ./configure
    make
    cd ..
    # install packages
    pip install -r requirements.txt

%files
    scripts/error_modes.py /viridian_simulations/scripts/error_modes.py
    V3/* /viridian_simulations/V3
    V4/* /viridian_simulations/V4
    V4.1/* /viridian_simulations/V4.1
    requirements.txt /viridian_simulations/

%runscript
    python ${SINGULARITY_ROOTFS}/viridian_simulations/scripts/error_modes.py "$@"